<Window x:Class="RogueLikeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RogueLikeWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1000" PreviewKeyDown="Window_PreviewKeyDown">
    <DockPanel LastChildFill="True">

        <DockPanel LastChildFill="True" DockPanel.Dock="Right">
            <StackPanel Orientation="Vertical" Width="150" Background="Black">

            </StackPanel>
        </DockPanel>
        
        <Border BorderBrush="#FF006E8F" DockPanel.Dock="Top" BorderThickness="10" Background="Black" Height="Auto" Width="Auto">
            <Border.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Border.OpacityMask>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Canvas Margin="0" x:Name="canvasMain" Loaded="canvasMain_Loaded" Width="800" Height="500" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </ScrollViewer>
            
        </Border>




        <StackPanel Orientation="Vertical">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF125F9E" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>

            <StackPanel Orientation="Horizontal">
                <Label Foreground="White" FontSize="16">Floor:</Label>
                <Label Foreground="White" FontSize="16" Content="{Binding Path=Map.CurrentMapLevel}"></Label>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Foreground="White" FontSize="16">Location:</Label>
                <Label Foreground="White" FontSize="16" Content="{Binding Path=Player.Location}"></Label>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Foreground="White" FontSize="16">Level:</Label>
                <Label Foreground="White" FontSize="16" Content="{Binding Path=TheMap.ThePlayer.PlayerLevel}"></Label>
                <ProgressBar Margin="5,3,3,3" HorizontalAlignment="Left" Foreground="White" FontSize="16" Width="150" Height="12" Value="{Binding Path=Player.ProgressTowardsNextLevel}"></ProgressBar>
            </StackPanel>
                
            

        </StackPanel>
    </DockPanel>
</Window>

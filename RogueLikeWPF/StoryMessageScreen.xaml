<Window x:Class="Shadows.StoryMessageScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shadows"
        mc:Ignorable="d"
        Title="StoryMessageScreen" Height="200" Width="300" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" FontFamily="Viner Hand ITC" Foreground="White" Background="{StaticResource DialogBackgroundGradient}">

    <Border BorderBrush="White" BorderThickness="2">
        <DockPanel LastChildFill="True">
            <Image x:Name="imgOK" MouseDown="imgOK_MouseDown" Width="32" Margin="5" DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Right" Source="Images/Ok-icon.png"></Image>
            <TextBlock Foreground="White" x:Name="lblStoryMessage" TextWrapping="Wrap" Margin="5" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
        </DockPanel>    
    </Border>

</Window>
